<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="14"
    tools:context=".scanner_activity_1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="8"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_bt_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back_bt" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:padding="15dp"
        android:autoSizeTextType="uniform"
        android:text="Enter the letters"
        android:fontFamily="@font/jetbrain"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="7.2"
        android:layout_weight="1">
        <androidx.cardview.widget.CardView
            android:layout_marginStart="15dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#F8F8F8"
            android:layout_weight="6"
            app:cardCornerRadius="10dp"
            android:outlineSpotShadowColor="#00000000"
            >
            <EditText
                android:id="@+id/editTx"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="letter"
                android:layout_marginHorizontal="5dp"
                android:fontFamily="@font/jetbrain"
                android:textColorHint="#CCCCCC"
                android:background="@null"
                />
        </androidx.cardview.widget.CardView>
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"/>
        <ImageView
            android:id="@+id/go_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/gobt"
            android:layout_marginEnd="15dp"
            />

    </LinearLayout>
    <ImageView
        android:id="@+id/imageqr"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        />
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/down_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/icon2" />

        <ImageView
            android:id="@+id/share_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/icon1" />
    </LinearLayout>



</LinearLayout>